// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Service models
model ServiceType {
  id          String   @id @default(cuid())
  name        String
  description String?
  icon        String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Plan models
model Plan {
  id          String   @id @default(cuid())
  name        String
  description String?
  price       Float
  speed       Int? // Speed in Mbps if internet plan
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Promotion models
model Promotion {
  id          String   @id @default(cuid())
  name        String
  description String?
  discount    Float // Percentage discount
  duration    Int // Duration in months
  active      Boolean  @default(true)
  color       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Addon models
model AddOn {
  id          String   @id @default(cuid())
  name        String
  description String?
  price       Float
  icon        String?
  color       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Media models
model Media {
  id          String    @id @default(cuid())
  name        String
  description String?
  url         String
  alt         String?
  type        MediaType @default(IMAGE)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

enum MediaType {
  IMAGE
  VIDEO
}
